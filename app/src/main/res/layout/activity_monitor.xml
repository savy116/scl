<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d455b"
    tools:context=".Areas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/table_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >


            <TableRow
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TextView
                    android:id="@+id/Supervisor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Supervisor:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/SupervisorTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/tableborder"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#033165"
                    android:textSize="16sp" />



            </TableRow>



            <TableRow
                android:shrinkColumns="*"
                android:stretchColumns="*">


                <TextView
                    android:id="@+id/FloorExecutive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Floor Executive:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/FloorExecutiveTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/tableborder"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#033165"
                    android:textSize="16sp" />


            </TableRow>


            <TableRow
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TextView
                    android:id="@+id/ShiftLead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Shift Lead"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/ShiftLeadTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/tableborder"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#033165"
                    android:textSize="16sp" />

            </TableRow>


            <TableRow
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TextView
                    android:id="@+id/AreaTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Area"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/Area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/tableborder"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#033165"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TextView
                    android:id="@+id/TouchPointTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/cell_shape"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Touch Point"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/TPTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".25"
                    android:background="@drawable/tableborder"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#033165"
                    android:textSize="16sp" />

            </TableRow>


        </TableLayout>



    </LinearLayout>
</ScrollView>